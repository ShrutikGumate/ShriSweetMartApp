<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="144dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@mipmap/ic_logo2_foreground">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us here"
            android:id="@+id/Welcome"
            android:fontFamily="@font/poppinsbold"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            android:gravity="center">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e.g. xyz@gmail.com"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/phonenumberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e.g. 0123456789"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/websiteTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/instagramTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Youtube"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/youtubeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="2">

            </TextView>

            <TextView
                android:id="@+id/twitterTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/bottombar"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>